<p id="notice"><%= notice %></p>

<img id="tokimonImg" src="" alt="Placeholder" height="300" width="300">

<div id="tokimonAttributes" >

    
  <p>
    <strong>Trainer:</strong>
    <%= @tokimon.trainer.name %>
  </p>

  <p id="tokimonName" value="<%= @tokimon.name %>">
    <strong>Name:</strong>
    <%= @tokimon.name %>
  </p>

  <p>
    <strong>Weight:</strong>
    <%= @tokimon.weight %>
  </p>

  <p>
    <strong>Height:</strong>
    <%= @tokimon.height %>
  </p>


  <p>
    <strong>Fly:</strong>
    <%= @tokimon.fly %>
  </p>

  <p>
    <strong>Fight:</strong>
    <%= @tokimon.fight %>
  </p>

  <p>
    <strong>Water:</strong>
    <%= @tokimon.water %>
  </p>

  <p>
    <strong>Fire:</strong>
    <%= @tokimon.fire %>
  </p>

  <p>
    <strong>Electric:</strong>
    <%= @tokimon.electric %>
  </p>

  <p>
    <strong>Freeze:</strong>
    <%= @tokimon.freeze %>
  </p>

  <p>
    <strong>Total:</strong>
    <%= @tokimon.total %>
  </p>
</div>

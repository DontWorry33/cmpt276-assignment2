<h1>Editing Tokimon</h1>

<%= render 'trainerselector', trainers:@trainers %>
<%= render 'form', tokimon: @tokimon %>

<div id="tokimondata" style="display: none;">
	<p id="data"><%= @tokimon.trainer.name %></p>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		//set the initial trainer input to the currently selected trainers value
		$('#trainerVal option:selected').val($('#data').text());
	});
</script>

<div class="centerText">
	<%= link_to 'Show', @tokimon %> |
	<%= link_to 'Back', tokimons_path %>
</div>